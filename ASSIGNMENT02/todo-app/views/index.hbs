{{> header}}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>My Tasks ({{tasks.length}})</h2>
    <a href="/tasks/add" class="btn btn-primary">+ Add Task</a>
</div>

{{#if tasks.length}}
{{#each tasks}}
<div class="card mb-3">
    <div class="card-body">
        <h5>{{title}}</h5>
        {{#if description}}<p>{{description}}</p>{{/if}}
        <small class="text-muted">Created: {{formatDate createdAt}}</small>
    </div>
</div>
{{/each}}
{{else}}
<div class="text-center py-5">
    <h3>No tasks yet</h3>
    <p class="text-muted">Get started by adding your first task!</p>
    <a href="/tasks/add" class="btn btn-primary btn-lg">+ Create First Task</a>
</div>
{{/if}}
{{> footer}}